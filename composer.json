{
	"name": "spacedmonkey/classic-menu-block",
	"description": "A gutenberg block to use classic menus.",
	"license": "GPL-2.0-or-later",
	"type": "wordpress-plugin",
	"authors": [
		{
			"name": "Jonny Harris",
			"homepage": "https://www.spacedmonkey.com/"
		}
	],
	"homepage": "http://wp-api.org/",
	"support": {
		"issues": "https://github.com/spacedmonkey/classic-menu-block/issues"
	},
	"require": {
		"php": "^5.6 || ^7.0 || ^8.0",
		"composer/installers": "^1.10"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"sirbrillig/phpcs-variable-analysis": "^2.11",
		"squizlabs/php_codesniffer": "^3.6",
		"wp-coding-standards/wpcs": "^3.1"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"discard-changes": true,
		"platform": {
			"php": "5.6"
		},
		"sort-packages": true
	},
	"scripts": {
		"phpcbf": "phpcbf",
		"phpcs": "phpcs",
		"test": "phpunit"
	}
}
